<div class="container">
	<div class="row">
		<div class="col-md-8">
			<h2>Daftar Buku</h2>
			<a href="/book/add" class="btn btn-primary mb-2">Tambah Buku</a>
			<% if (msg.length !== 0) {%>
			<div class="alert alert-success" role="alert"><%= msg %></div>
			<% } %>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Judul</th>
						<th scope="col">Penulis</th>
						<th scope="col">Tahun Terbit</th>
						<th scope="col">Aksi</th>
					</tr>
				</thead>
				<tbody>
					<% if (books.length === 0) { %>
					<tr>
						<td colspan="5">
							<div class="alert alert-danger" role="alert">
								Data buku masih kosong!
							</div>
						</td>
					</tr>
					<% } %> <% books.forEach((book, i) => { i++ %>
					<tr>
						<th scope="row"><%= i++ %></th>
						<td><%= book.judul %></td>
						<td><%= book.penulis %></td>
						<td><%= book.tahunTerbit %></td>
						<td>
							<a
								href="/book/<%= book.judul %> "
								class="btn btn-success badge rounded-pill"
								>Detail
							</a>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>
